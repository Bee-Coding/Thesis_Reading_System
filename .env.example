# Thesis Reading System Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===================
# LLM API Configuration
# ===================

# DeepSeek API (DeepSeek R1)
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_BASE=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-reasoner

# Anthropic API (Claude Opus 4.5)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-opus-4-5-20250514

# OpenAI Compatible API (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# ===================
# LLM Rotation Configuration
# ===================
# Enable rotation between multiple LLM providers
LLM_ROTATION_ENABLED=true

# Primary provider: deepseek, anthropic, openai
LLM_PRIMARY_PROVIDER=deepseek

# Secondary provider for rotation
LLM_SECONDARY_PROVIDER=anthropic

# Rotation strategy: round_robin, fallback, task_based
# - round_robin: alternate between providers
# - fallback: use secondary only when primary fails
# - task_based: use different providers for different task types
LLM_ROTATION_STRATEGY=round_robin

# ===================
# Database Configuration
# ===================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=thesis_reading_system
DB_USER=postgres
DB_PASSWORD=your_database_password_here

# ===================
# System Configuration
# ===================

# Execution mode: Deep_Internalization, Quick_Assessment, Engineering_Reproduction, Validation_Focused
DEFAULT_EXECUTION_MODE=Deep_Internalization

# Quality gate threshold: A, B, C, D
DEFAULT_QUALITY_THRESHOLD=B

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ===================
# Mem0 Configuration
# ===================
# Mem0 API Key (for memory management)
MEM0_API_KEY=your_mem0_api_key_here

# Mem0 Settings
MEM0_ENABLED=true
MEM0_USER_ID=zhn
MEM0_ORGANIZATION_ID=thesis_reading_system

# Memory Management Settings
MEMORY_AUTO_SAVE=true
MEMORY_CONTEXT_WINDOW=10
MEMORY_RELEVANCE_THRESHOLD=0.7
